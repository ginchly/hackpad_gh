

<div class="row">
    <div class="span12">
        <div class="canvas">
            <ul id="ideaList">
              <!-- post in notes go here -->

                <% if ideas.any? %>
                    <% ideas.each_with_index do |idea,index| %>
                    <li id="draggable<%= index %>">
                          <div style="position: absolute; bottom: 10px; right: 10px; width: 100px; text-align:right;">
                            <%= link_to "Delete", idea, method: :delete %>    
                        </div>
                        <p> <%= idea.content %> </p>

                    </li>
                    <script> $( '#draggable<%= index %>').draggable(); </script>
                    <% end %>
                <% end %>

            </ul>
        </div> <!-- end canvas -->
    </div>
</div>